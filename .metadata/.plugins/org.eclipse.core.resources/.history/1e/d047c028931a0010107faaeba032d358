package bai5_1;

import java.time.LocalDate;
import java.util.ArrayList;

public class Main {
	public static void main(String[] args) {
		Employee e1 = new SalaryEmployee("Nguyen Hoang",LocalDate.of(2001, 5, 20), 50000000, 2500);
		Employee e2 = new HourlyEmployee("Tran Minh",LocalDate.of(2005, 6, 25), 50000, 45);
		Employee e3 = new Consultant("Le Van",LocalDate.of(2004, 9, 11), "012030",  5000000);
		
		System.out.println("This SalaryEmployee is: "+e1.toString());
		System.out.println("This HourlyEmployee is: "+e2.toString());
		System.out.println("This Consultant is: "+e3.toString());

		// e) Tạo một danh sách nhân viên (dùng ArrayList) và tạo 10 nhân viên.
		ArrayList<Employee> emp = new ArrayList<Employee>();
		emp.add(new SalaryEmployee("Dang Gia Bao", LocalDate.of(2020, 11, 21), 45000000, 120));
		emp.add(new SalaryEmployee("Ngo Quoc Chi", LocalDate.of(2023, 4, 1), 250000000, 120));
		emp.add(new SalaryEmployee("Nguyen Phan", LocalDate.of(2010, 6, 8), 45000000, 120));
		emp.add(new SalaryEmployee("O Hue Hao", LocalDate.of(2008,10, 10), 45000000, 120));


	}

}
