package bt4_2;

public class Bai4_2 {
	public static String replace(String s, String s1, String s2) {
        StringBuilder result = new StringBuilder();
        int i = 0;

        while (i < s.length()) {
            boolean match = true;

            // Kiểm tra xem từ vị trí i có khớp với s1 không
            if (i + s1.length() <= s.length()) {
                for (int j = 0; j < s1.length(); j++) {
                    if (s.charAt(i + j) != s1.charAt(j)) {
                        match = false;
                        break;
                    }
                }
            } else {
                match = false;
            }

            // Nếu khớp, thêm s2 vào kết quả, và tăng i theo độ dài s1
            if (match) {
                for (int j = 0; j < s2.length(); j++) {
                    result.append(s2.charAt(j));
                }
                i += s1.length();
            } else {
                result.append(s.charAt(i));
                i++;
            }
        }

        return result.toString();
    }

	   public static void main(String[] args) {
	        String s = "abababcab";
	        String s1 = "ab";
	        String s2 = "xy";

	        String replaced = replace(s, s1, s2);
	        System.out.println("Chuỗi sau khi thay thế: " + replaced);
	    }
	

}
	