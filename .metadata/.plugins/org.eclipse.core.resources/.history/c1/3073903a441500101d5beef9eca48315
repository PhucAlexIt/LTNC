package bt4_1;

public class BT4_1 {
	//1. Cho 2 chuỗi s và s1. Tìm vị trí đầu tiên chuỗi s1 xuất hiện trong chuỗi s. 
	public static int findFirstOccurrence(String s, String s1) {
        // Xử lý các trường hợp đặc biệt
        if (s == null || s1 == null || s1.length() > s.length() || s1.isEmpty()) {
            return s1.isEmpty() ? 0 : -1;
        }
        
        int sLength = s.length();
        int s1Length = s1.length();
        
        // Duyệt qua chuỗi s cho đến khi không thể chứa s1 nữa
        for (int i = 0; i <= sLength - s1Length; i++) {
            int j;
            
            // Kiểm tra xem s1 có khớp với đoạn chuỗi con của s bắt đầu từ vị trí i không
            for (j = 0; j < s1Length; j++) {
                if (s.charAt(i + j) != s1.charAt(j)) {
                    break;
                }
            }
            
            // Nếu đã duyệt hết chuỗi s1 mà không break, nghĩa là tìm thấy s1 trong s
            if (j == s1Length) {
                return i;
            }
        }
        
        // Không tìm thấy s1 trong s
        return -1;
    }
	 public static void main(String[] args) {
	        String s = "Xin chao, toi la ChatGPT!";
	        String s1 = "la";

	        int position = findString(s, s1);

	        if (position != -1) {
	            System.out.println("Chuỗi s1 xuất hiện đầu tiên ở vị trí: " + position);
	        } else {
	            System.out.println("Chuỗi s1 không xuất hiện trong chuỗi s.");
	        }
	    }
				
			
	
}
